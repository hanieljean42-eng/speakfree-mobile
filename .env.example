# Environment Configuration

# Node Environment
NODE_ENV=development

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=speakfree
DB_USER=speakfree_user
DB_PASSWORD=speakfree_pass
DB_ROOT_PASSWORD=rootpassword

# Database URL (for Prisma)
DATABASE_URL=mysql://speakfree_user:speakfree_pass@localhost:3306/speakfree

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Backend
BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000

# Admin Web
ADMIN_PORT=5173
VITE_API_URL=http://localhost:3000/api

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Super Admin Default
SUPER_ADMIN_EMAIL=superadmin@speakfree.com
SUPER_ADMIN_PASSWORD=SuperAdmin2024!
SUPER_ADMIN_CODE=200700

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=speakfree-files

# Firebase (Notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-email

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@speakfree.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=SpeakFree <noreply@speakfree.com>

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Application
APP_NAME=SpeakFree
APP_URL=https://speakfree.app
