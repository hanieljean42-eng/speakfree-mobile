{
  "name": "speakfree",
  "version": "1.0.0",
  "description": "Application mobile de signalement anonyme pour Ã©tablissements scolaires",
  "private": true,
  "workspaces": [
    "backend",
    "admin-web"
  ],
  "scripts": {
    "setup": "npm install && cd backend && npm install && cd ../admin-web && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:admin": "cd admin-web && npm run dev",
    "build": "npm run build:backend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-web && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:studio": "cd backend && npx prisma studio",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:backend && npm run lint:admin",
    "lint:backend": "cd backend && npm run lint",
    "lint:admin": "cd admin-web && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
